<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
       (<%= link_to "edit" , edit_message_path(message) %>
         <%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
        )
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %> 
  <div class="form-group">
    <label for="message_name" class="col-sm-1 control-label">名前:</label>
    <div class="col-sm-7">
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col-sm-4"></div>
  </div>
  <div class="form-group">
    <!-- 以下省略 -->

    <label for="message_body" class="col-sm-1 control-label">内容:</label>
    <div class="col-sm-7">
        <%= f.text_area :body, class: "form-control" %>
    </div>
    <div class="col-sm-4"></div>
  </div>
  <div class="form-group">
    <!-- 以下省略 -->

    <label for="message_age" class="col-sm-1 control-label">年齢:</label>
    <div class="col-sm-7">
        <%= f.text_field :age, class: "form-control" %>
    </div>
    <div class="col-sm-4"></div>
  </div>
  <div class="row">
    <div class="col-md-1 col-md-offset-1">
        <div class="actions">
          <%= f.submit class: "btn btn-sm btn-primary" %>
        </div>
    </div>
  </div>
<% end %> 